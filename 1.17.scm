(define (double x) (+ x x))

(define (halve x) (/ x 2))

(define (even? x) (= (remainder x 2) 0))

(define (* x y)
  (cond ((= x 0) 0)
        ((even? x) (* (halve x) (double y)))
        (else (+ y (* (- x 1) y)))))

